{
  "name": "AI Roleplay Chat Dev Environment",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "backend",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "ms-azuretools.azure-cli",
        "ms-azuretools.vscode-azureappservice",
        "ms-azuretools.vscode-bicep",
        "ms-azuretools.vscode-docker",
        "humao.rest-client",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "Google.gemini-code-assist"
      ]
    }
  },
  "forwardPorts": [
    7000,
    5173
  ],
  "portsAttributes": {
    "7000": {
      "label": "Backend API",
      "protocol": "http"
    },
    "5173": {
      "label": "Frontend Vite",
      "protocol": "http"
    }
  },
  "postCreateCommand": "sudo npm install -g @google/gemini-cli && cd /workspace/frontend && npm install",
  "postStartCommand": "cd /workspaces/ai-roleplay-chat/backend && dotnet run & cd /workspaces/ai-roleplay-chat/frontend && npm run dev",
  "remoteUser": "vscode"
}